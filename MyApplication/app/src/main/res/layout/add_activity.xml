<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ladyhacks_project.ladyhacks_project.MainActivity">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:id="@+id/spinner"
        android:text="Select Product"/>


    <TextView
        android:text="Select Product to add: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Add Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="add_item_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Days"
        android:ems="10"
        android:width="50dp"
        android:layout_marginTop="48dp"
        android:id="@+id/text"
        android:layout_below="@+id/spinner"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:onClick="done_button"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:text="Expiry Date: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/text"
        android:layout_alignBottom="@+id/text"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_day"
        android:layout_alignTop="@+id/text"
        android:layout_toEndOf="@+id/button3"
        android:layout_marginStart="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_____________________________________________________"
        android:width="400dp"
        android:height="160dp"
        android:id="@+id/added_list"
        android:scrollbars = "vertical"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />


</RelativeLayout>
